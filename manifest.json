{
  "name": "Bold Reading",
  "description": "Enhanced text readability for those with ADD/ADHD.",
  "version": "1.0.0",
  "manifest_version": 3,
  "author": "Erik Martinez",
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": ["http://*/", "https://*/"],
  "action": {
    "default_popup": "index.html",
    "default_title": "Bold Reading"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
